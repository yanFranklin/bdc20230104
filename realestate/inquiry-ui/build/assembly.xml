<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>release</id>
    <formats>
        <!--<format>dir</format>-->
        <!--<format>tar.bz2</format>-->
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/target/bin</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>./cfg/</outputDirectory>
            <includes>
                <include>*.yml</include>
                <include>/bdcSfxx/*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/webapp/static/printModel</directory>
            <outputDirectory>./print/</outputDirectory>
            <includes>
                <include>*.fr3</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target</directory>
            <outputDirectory>./app/</outputDirectory>
            <includes>
                <include>${project.build.finalName}.jar</include>
                <include>maven-archiver/*</include>
            </includes>
        </fileSet>

    </fileSets>
</assembly>