.lpb-back-btn {
  display:none;
}
body,
html {
  font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif !important;
  font-size: 14px;
  background: #eaedf1;
}
.clear:after {
  content: '';
  display: block;
  clear: both;
}
.bdc-hide {
  display: none;
}
.bdc-major-btn {
  background-color: #1d87d1;
}
.bdc-major-btn:hover {
  background-color: #1675b8;
}
.bdc-secondary-btn {
  background-color: #f3f4f6;
  color: #666;
  border: 1px solid #d0d5da;
}
.bdc-secondary-btn:hover {
  color: #666;
}
.bdc-delete-btn {
  background-color: #f54743;
}
.bdc-table-second-btn {
  background-color: #fff;
  border: 1px solid #d0d5da;
  color: #333;
}
.bdc-table-second-btn:hover {
  color: #333;
}
.bdc-prohibit-btn {
  background-color: #fff;
  color: #999;
  border: 1px solid #d0d5da;
}
.bdc-prohibit-btn:hover {
  cursor: not-allowed;
  opacity: 1;
  color: #999;
}
