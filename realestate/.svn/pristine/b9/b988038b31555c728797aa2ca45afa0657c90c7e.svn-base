@import "./common.less";
body{
    background-color: @systemBg;
}
html,body{
    width: 100%;
    height: 100%;
}
.content-div{
    width: 100%;
    height: 100%;
    padding: 84px 15px 15px 15px;
    box-sizing: border-box;
    .bdc-content-box{
        width: 100%;
        height: 100%;
        overflow-x: auto;
        background-color: #fff;
    }
    form{
        //padding-top: 71px;
        background-color: #fff;
        width: 1200px;
        padding: 0 20px;
        margin: 0 auto;
    }
}

.content-title{
    padding: 15px 0;
    border-bottom: 1px solid @borderBg;
    background-color: #fff;
    height: 38px;
    clear: both;
    //position: fixed;
    top: 15px;
    left: 15px;
    z-index: 9;
    p{
      font-size: 20px;
      color: #333;
      float: left;
      margin-left: 20px;
      line-height: 38px;
    }
    .title-btn-area{
      float: right;
      margin-right: 20px;
    }
}

.content-main{
    width: 100%;
    //overflow: auto;
}
.table-name{
    width: 1200px;
    height: 22px;
    margin: 0 auto;
    padding: 26px 0;
    text-align: center;
    font-size: 20px;
    color: #333;
    background-color: #fff;
}

.layui-table td{
    overflow: hidden;
}
table{
    position: relative !important;

}

.content-main table input[type='text']{
    display: block;
    border: none;
    outline: none;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}
.layui-input, .layui-textarea{
    padding-left: 5px;
}
.content-main .layui-form-danger+.layui-form-select .layui-input,
.content-main .layui-form-danger:focus{
 border: 1px solid @warnColor!important;
}
.bdc-table-box{
    width: 100%;
    //overflow: auto;
}
.layui-table{
    //max-width: 1200px;
    width: 1200px;
    margin: 0 auto;
    margin-bottom: 20px;
}

.content-main .layui-table tbody tr:hover,
.content-main .layui-table thead tr,
.content-main .layui-table-click,
.content-main .layui-table-header,
.content-main .layui-table-hover,
.content-main .layui-table-mend,
.content-main .layui-table-patch,
.content-main .layui-table-tool,
.content-main .layui-table[lay-even] tr:nth-child(even) {
    background-color: transparent;
}
table.layui-table .quarantine{
    border-left-color:transparent !important;
    border-right-color:transparent !important;
}
table{
    border: 0;
}
tr,
td{
    color: @mainTextColor;
    textarea{
        color: @mainTextColor;
    }
}
.layui-table td,
.layui-table th,
.layui-table-col-set,
.layui-table-fixed-r,
.layui-table-grid-down,
.layui-table-header,
.layui-table-page,
.layui-table-tips-main,
.layui-table-tool,
.layui-table-total,
.layui-table-view,
.layui-table[lay-skin=line],
.layui-table[lay-skin=row]{
    border-color: @borderBg;
}
.layui-table td.set-back-color{
    background-color: @subColor;
    padding: 0 6px;
}
.layui-table td, .layui-table th{
    //padding: 0 10px;
    padding: 0;
    height: 39px;
    overflow: visible;
}
.layui-table-edit{
    box-shadow:none;
    position: relative;
    color: @mainTextColor;
    padding: 0 5px;
}
.required-span {
    color: @warnColor;
    margin-right: 6px;
}

td{
    text-align: right;
    textarea{
        display: block;
        /*position: absolute;
        left: 0;
        top: 0;*/
        width: 100%;
        height: 100%;
        border: none;
        outline: none;
        resize: none;
        padding-left: 5px;
        box-sizing: border-box;
    }
    p{
        text-align: left;
    }
}
.set-center{
    text-align: center;
}
.set-tr-height{
    height:60px;
}
.set-tr-height158{
    height: 158px;
}

.statement{
    font-size: 14px;
    color: #333;
    line-height: 23px;
    text-indent: 2em;
    margin: 20px 10px;
    text-align: left;
}
.content-main table .gnature{
    width: 800px;
    text-align: left;
}

.content-main table .gnature input[type='text']{
    display: block;
    width: 182px;
    padding-left: 10px;
    height: 38px;
    line-height: 38px;
    background-color: #fff;
    border-radius: 2px;
    border:none;
}
.content-main table .setTimes .setTimes-float{
    float: left;
    margin-left: 90px;
}
.content-main table .setTimes .setTimes-float label{
    width: 18px !important;
    padding: 9px 0;
    margin: 0;
    text-align: left;
}
.content-main table .setTimes .setTimes-float input,
.content-main table .setTimes .setTimes-float label{
    float: left;
}
.content-main table  .setTimes input[type='text']{
    max-width: 38px;
    border: none;
    text-align: center;
}
.change-label-width {
    width: 138px !important;
    padding: 9px 8px;
    font-size: 14px;
}
input::-webkit-input-placeholder {
    color: @placeholderTextColor;
}

.layui-form-select dl dd.layui-this{
    background-color: @themeColor;
}
.layui-select-title{
    height: 38px;
}
.layui-form-select{
    text-align: left;
}.layui-form-select .layui-input{
    color: @mainTextColor;
 }
 .bdc-set-width{
     width: 80px;
     box-sizing: border-box;
 }
.layui-input:hover, .layui-textarea:hover {
    border-color: #D2D2D2!important;
}
input:disabled {
    //color: #666;
    background-color: #fff;
}
.bdc-remark{
    text-indent: 2em;
}
td .fa-ban{
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
    color: @warnColor;
    font-size: 18px;
}
.layui-disabled, .layui-disabled:hover {
    color: #333!important;
    cursor: text!important;
}