@import "./common.less";
*{
  margin: 0;
  padding: 0;
}
html,body{
  width: 100%;
  height: 100%;
}
body{
  background-color: @systemBg;
  padding: 10px;
  box-sizing: border-box;
}
.bdc-container{
  background-color: #fff;
  height: 100%;
  padding-top: 68px;
  box-sizing: border-box;
  position: relative;
}

.bdc-title{
  width: 100%;
  height: 68px;
  line-height: 68px;
  font-size: 16px;
  border-bottom: 1px solid @borderBg;
  padding: 0 20px;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
}
.bdc-title .bdc-btn-box{
  position: absolute;
  top: 0;
  right: 20px;
}
.bdc-table-box{
  width: 960px;
  height: 100%;
}
.bdc-table-box .layui-form-onswitch{
  border-color: #1d87d1;
  background-color: #1d87d1;
}
.bdc-table-box .layui-form-switch{
  margin-right: 100px;
}
.bdc-table-box .layui-btn-container span{
  position: absolute;
  top: 10px;
  font-size: 14px;
}
.bdc-table-box .bdc-switch span{
  position: absolute;
  top: 10px;
  font-size: 14px;
}
.bdc-first-span{
  left: 80px;
}
.bdc-second-span{
  left: 218px;
}

.layui-table-box{
  border-bottom: 1px solid #d0d5da;
}
.bdc-switch{
  height: 50px;
  line-height: 50px;
  background-color: #f3f4f6;
  border: 1px solid #d0d5da;
  border-bottom: none;
  padding-left: 15px;
  box-sizing: border-box;
}
.bdc-switch .layui-form-switch{
  margin-top: -5px;
}