@import "./common.less";
@import "./search.less";
html,body{
    height: 100%;
}
body{
  background-color: @systemBg;
}
//一个输入框占两个位置
.layui-form-item .layui-inline.bdc-two-column{
    width: 64%;
}
.layui-form-item .bdc-two-column .layui-input-inline{
  width: 77%;
}
.bdc-form-div{
    width: 100%;
    //height: 100%;
    padding: 108+@paddingNum @paddingNum @paddingNum;
    box-sizing: border-box;
    background-color: @systemBg;
}
.bdc-form-not-full{
    height: 100%;
    padding-top: 58+@paddingNum;
}
.bdc-form-div .layui-form{
    height: 100%;
    box-sizing: border-box;
    background-color: #fff;
}
.basic-info{
    padding: 15px @paddingNum;
    border-bottom: 1px dotted #eaedf1;

    &:last-child{
        border-bottom: none;
    }
}
.bdc-content-fix{
    width: 100%;
    height: 58px;
    background-color: #eaedf1;
    padding: 0 @paddingNum;
    box-sizing: border-box;
    position: fixed;
    top: @paddingNum;
    left: 0;
    z-index: 999;
}
.content-title{
    padding: @paddingNum 0;
    border-bottom:1px solid @systemBg;
    background-color: #fff;
    height: 58px;
    clear: both;
    top: @paddingNum;
    left: @paddingNum;
    z-index: 9;
    box-sizing: border-box;

    p{
        font-size: 16px;
        color: #333;
        float: left;
        margin-left: @paddingNum;
        line-height: 38px;
    }
    .title-btn-area{
        float: right;
        margin-right: @paddingNum;
    }
}
.layui-form-item{
    .layui-inline{
        width: 32%;
    }
  .layui-input-inline{
      width: 53%;
  }
}

.form-margin-area{
    background-color: #fff;
}
.change-input-width90{
    width: 25.5% !important;
}

.title-sign{
    width: 100%;
    height: 20px;

    p{
        font-size: 14px;
        color: #333;
        height: 16px;
        border-left: 4px solid #1d87d1;
        margin-left: 5px;
        padding-left: @paddingNum;
        line-height: 16px;
    }
}
.layui-form-item{
    margin-bottom: 0;
}
.change-textarea-margin .layui-input-inline{
    width: 81.5%;
}
.change-textarea-margin{
    margin-top: @paddingNum;
}

.required-span{
   color: @warnColor;
   margin-right: 6px;
}
.layui-form-checked[lay-skin=primary] i {
   border-color: @themeColor;
   background-color: @themeColor;
   color: #fff;
}
.layui-form-checkbox[lay-skin=primary]:hover i {
   border-color: @themeColor;
   color: #fff;
}
.layui-input:focus, .layui-textarea:focus{
   border-color: @themeColor!important;
}
.layui-disabled:focus{
    border-color: @borderBg!important;
}
.layui-disabled, .layui-disabled:hover{
    cursor: text!important;
    color: @mainTextColor!important;
}
.layui-form-radio>i:hover, .layui-form-radioed>i{
   color: @themeColor;
}
.layui-form-danger+.layui-form-select .layui-input, .layui-form-danger:focus{
    border-color: @warnColor!important;
}
input:disabled {
    //cursor: not-allowed;
    color: @subTextColor;
}
.layui-inline .layui-form-label{
    height: 20px;
}
.layui-form-label{
    width: 90px;
}
.change-label-width {
    //width: 138px !important;
    //padding: 9px 8px;
    font-size: 14px;
}
.basic-info .bdc-label-newline{
    padding: 5px 15px;
    height: 28px;
    line-height: 12px;
}
//为空提示图标

