//锚点连接
.bdc-nav-container{
    width: 100%;
    height: 50px;
    padding-right: 20px;
    overflow: hidden;
    position: fixed;
    top: 58+@paddingNum;
    left: @paddingNum;
    box-sizing: border-box;
    z-index: 9;

    .bdc-nav-box{
        width: 100%;
        height: 50px;
        background-color: #eaf4fe;
        position: relative;
        .layui-icon{
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            font-size: 20px;
            color: @placeholderTextColor;
        }
        .layui-icon-prev{
            left: 8px;
        }
        .layui-icon-next{
            right: 8px;
        }
    }
    .slick-slider{
        width: 100%;
        height: 50px;
        margin-bottom: 0;
        padding: 0 35px;
        box-sizing: border-box;
    }
    .slick-prev {
        left: 8px;
    }
    .slick-next {
        right: 8px;
    }
    .slick-prev:before, .slick-next:before{
        //color: #eaf4fe;
    }

    .slick{
        a{
            display: inline-block;
            width: 100%;
            height: 50px;
            line-height: 50px;
            padding: 0 5px;
            border-bottom: 2px solid #eaf4fe;
            box-sizing: border-box;
            text-align: center;
        }
        a:hover{
            color: @themeColor;
        }

        .bdc-this{
            a{
                border-bottom-color: @themeColor;
                color: @themeColor;
            }
        }
    }
}
.slick-prev, .slick-next{
    opacity: 0;
    z-index: 999;
}
.layui-input-inline .fa-ban{
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
    color: @warnColor;
    font-size: 18px;
}