/*自定义公共样式*/
.simplicity-table {
    border-collapse: separate;
    border-spacing: 10px;
    color: #000000;
    font-size: 14px;
}

.modal {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
    outline: 0;
    -webkit-overflow-scrolling: touch;
    background-color: rgb(0, 0, 0);
    filter: alpha(opacity=60);
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 9999;
}

.vertical-center {
    margin-top: -7px;
    position: relative;
    line-height: 19px !important;
    height: 38px !important;
    white-space: normal;
}

.simplicity-table textarea {
    height: 38px !important;
    margin-bottom: 1px;
}

.layui-table td.right-label {
    border: none !important;
    text-align: right;
}

.simplicity-textarea {
    height: 42px !important;
    padding-right: 0px !important;
    padding-left: 0px !important;
}

.sl-table input {
    text-align: center;
    border: 0px !important;
}

.sl-table td {
    text-align: center;
}

.white-tr td {
    font-weight: bold;
    color: #000000;
    text-align: center;
}

.sl-from {
    margin-top: 15px;
    margin-left: 25px;
    margin-right: 25px;
}

.gray-tr td {
    text-align: center;
    /*
    background: #f3f4f6;
    */
}
.gray-tr{
    background: #f3f4f6;
}


body, html {
    font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif !important;
    font-size: 14px;
}

.clear:after {
    content: "";
    display: block;
    clear: both;
}

/*按钮样式*/
.main-btn {
    background-color: #1d87d1 !important;
    border: none;
    outline: none;
    color: #fff;
}

.main-btn:hover {
    background-color: #1675b8 !important;
}

.minor-btn {
    background-color: #f3f4f6 !important;
    border: 1px solid #d0d5da;
    outline: none;
    color: #333;
}

.minor-btn:hover {
    color: #333;
    border: 1px solid #1675b8;
}

.delete-btn {
    background-color: #f54743 !important;
    border: none;
    outline: none;
    color: #fff;
}

.normal-btn {
    background-color: #fff !important;
    border: 1px solid #d0d5da;
    outline: none;
    color: #333;
}

.normal-btn:hover {
    color: #333;
    border: 1px solid #1675b8;
}

button.forbidden-btn {
    color: #999;
    background-color: #fff !important;
    border: 1px solid #d0d5da;
    cursor: not-allowed;
}

button.forbidden-btn:hover {
    color: #999;
    background-color: #fff !important;
    border: 1px solid #d0d5da;
}

/*按钮样式结束*/


/*表单样式*/
/*表单块样式*/
.basic-form {
    padding: 20px 0 5px 0;
    border-bottom: 1px dotted #eaedf1;
    margin: 0 10px;
}

/*表单块的标题样式*/
.common-form .title-sign {
    width: 100%;
    margin-bottom: 20px;
}

.common-form .title-sign p {
    font-size: 14px;
    color: #333;
    height: 14px;
    border-left: 2px solid #1d87d1;
    padding-left: 10px;
    line-height: 14px;
}

.layui-table td, .layui-table th {
    padding: 0 10px;
    height: 39px;
    /* overflow: hidden; */
}

.layui-table, .layui-table-view {
    margin: 0 0 20px 0;
}

.input::-webkit-input-placeholder {
    color: #999;
}

.input:-moz-placeholder {
    color: #999;
}

.input:-ms-input-placeholder {
    color: #999;
}

.common-form .layui-inline {
    width: 32%;
    margin-bottom: 0;
}

.common-form .layui-form-label {
    width: 90px !important;
    color: #333;
    height: 38px;
    padding: 0 15px !important;
    line-height: 38px;
    font-size: 14px;
}

.common-form .layui-form-label.medium-label {
    width: 100px !important;
}

.layui-form-item .layui-input-inline {
    width: 57%;
}

/*联动表单*/
.linkage-input .layui-input-inline {
    width: 27.2%;
}

.layui-input:focus {
    border-color: #1d87d1 !important;
}

.layui-form-danger:focus {
    border-color: #f54743 !important;
}


/*table下表单的样式*/
.layui-table-tool, .layui-table thead tr {
    background-color: #f3f4f6;
}

.layui-table tr, .layui-table td, .layui-table th {
    border: 1px solid #d0d5da !important;
}

.layui-table-click {
    background-color: transparent;
}

td dl dd {
    text-align: left;
}

.layui-laydate .layui-this,
dd.layui-this {
    background-color: #1d87d1 !important;
}

.common-form td .layui-form-select,
.common-form td .layui-select-title {
    margin-right: -10px;
}

.common-form td .layui-form-select dl {
    left: -10px;
}

.common-form table input {
    display: block;
    border: none;
    outline: none;
    width: 100%;
    height: 36px;
    color: #333;
    margin-left: -10px;
    padding-left: 10px;
    padding-right: 6px !important;
}

table input:focus, table .layui-textarea:focus {
    border: 1px solid #1d87d1 !important;
    box-shadow: 1px 1px 20px rgba(0, 0, 0, .15);
}

.common-form table .layui-form-select .layui-input:focus {
    border: 1px solid #1d87d1 !important;
    box-shadow: 1px 1px 20px rgba(0, 0, 0, .15);
}


.content-main table textarea {
    min-height: 60px !important;
    display: block;
    border: none;
    outline: none;
    width: 100%;
    height: 100%;
    color: #333;
    resize: none;
}


/*radio样式修改*/
.common-form .layui-form-radio > i:hover,
.common-form .layui-form-radioed > i {
    color: #1d87d1;
}

.common-form {
    position: relative;
}

/*textarea的样式修改*/
.textarea-change .layui-input-inline {
    width: 84.5%;
}


/*checkbox的样式修改*/
.layui-form-item .layui-form-checkbox[lay-skin=primary] {
    margin-top: 0;
}

.layui-form-checked[lay-skin=primary] i {
    border-color: #1d87d1;
    background-color: #1d87d1;
    color: #fff;
}

.common-form .layui-unselect:hover i.layui-icon-ok {
    border-color: #1675b8 !important;
}


.set-back-color {
    background-color: #f3f4f6;
    text-align: right;
}

.set-center {
    text-align: center;
    border: 0px !important;
}

.required-span {
    color: red;
    margin-right: 3px;
}

.content-main .layui-table tbody tr:hover {
    background-color: transparent;
}


.sl-from table input {
    text-align: center;
    border: 0px !important;
    width: 100%;
    height: 36px;
    color: #333;
    outline: none;
}

.layui-form .layui-table tbody tr:hover,
.layui-form .layui-table-body tr:hover,
.layui-form .layui-table-click,
.layui-form .layui-table-hover {
    background-color: #fff;
}



td .bdc-td-box > img {
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
    color: #f54743;
    font-size: 18px;
}
.layui-table td, .layui-table th{
    text-align: center;
}