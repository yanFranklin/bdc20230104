.bdc-default-list {
    text-align: center;
    padding: 10px 10px 0 10px;
    box-sizing: border-box;
    text-align: left;
}

.bdc-default-list .bdc-bdcdyh {
    line-height: 36px;
    text-align: left;
    color: #1d87d1;
    border-left: 3px solid #1d87d1;
    padding-left: 8px;
    background-color: #eee;
    margin-bottom: 8px;
}
.layui-tab-info{
margin-bottom: 4px;
margin-top: 2px;
}

.accordion {
    width: 100%;
    box-sizing: border-box;
}
.accordion .link, .accordion .childrenlink{
    min-height: 18px;
    cursor: pointer;
    display: block;
    padding: 10px 10px 10px 30px;
    color: #333;
    font-size: 14px;
    position: relative;
    -webkit-transition: all 0.4s ease;
    -o-transition: all 0.4s ease;
    transition: all 0.4s ease;
    white-space: nowrap;
}
.accordion .link.bdc-history,.accordion .childrenlink.bdc-history{
    padding-left: 28px;
}
.accordion .area-link {
    cursor: pointer;
    display: block;
    padding: 15px 15px 15px 46px;
    color: #333;
    font-size: 14px;
    position: relative;
    -webkit-transition: all 0.4s ease;
    -o-transition: all 0.4s ease;
    transition: all 0.4s ease;
}
.accordion .bdc-outer-li:last-child .link {
    border-bottom: 0;
}
.accordion .bdc-outer-li i {
    position: absolute;
    top: 4px;
    left: 8px;
    font-size: 18px;
    color: #333;
    -webkit-transition: all 0.4s ease;
    -o-transition: all 0.4s ease;
    transition: all 0.4s ease;
    padding: 6px;
}
.accordion .area-link i{
    position: absolute;
    top: 16px;
    left: 28px;
    font-size: 18px;
    color: #b5b7b8;
    -webkit-transition: all 0.4s ease;
    -o-transition: all 0.4s ease;
    transition: all 0.4s ease;
}
.link .docu-icon {
    position: absolute;
    left: 28px;
    top: 12px;
}
.bdc-history .docu-icon{
    left: 8px;
    top: 11px;
}
.fa{
    -webkit-transform: rotate(90deg);
    -ms-transform: rotate(90deg);
    -o-transform: rotate(90deg);
    transform: rotate(90deg);

}
.accordion .open>.link>i.fa-caret-right,.accordion .open>.childrenlink>i.fa-caret-right {
    -webkit-transform: rotate(0deg);
    -ms-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
}
.accordion .bdc-outer-li.open>.link>i.fa-caret-right{
    top: 4px;
    left: 4px;
}

.accordion .bdc-inner-li.open>.link>i.fa-caret-right{
    top: -1px;
    left: -38px;
}
.submenu .bdc-inner-li {
    padding: 6px 12px 6px 20px;
    box-sizing: border-box;
}
.submenu .xx-li {
    padding: 6px 12px 6px 30px;
    box-sizing: border-box;
}