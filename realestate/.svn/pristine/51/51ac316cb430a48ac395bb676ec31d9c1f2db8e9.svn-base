#waitModalLayer{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1002;
    background: rgba(0,0,0,.2);
}
#waitModalLayer .bdc-wait-content{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #666;
    background-color: #fff;
    width: 150px;
    height: 75px;
    line-height: 75px;
    font-size: 14px
}
#waitModalLayer .bdc-wait-content>i{
    font-size:32px;
    position: absolute;
    top: 0;
    left: 32px;
}
#waitModalLayer .bdc-wait-content>span{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 75px;
}