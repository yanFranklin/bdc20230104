html,
body {
    width: 100%;
    height: 100%;
}

.bdc-upload-dragdiv {
    width: 80%;
    height: 80%;
    padding: 15px;
    margin: 50px auto;
    box-sizing: border-box;
}

.img-drag {
    width: 100%;
    height: 100%;
    background-color: #f3f4f6;
    border: none;
    box-sizing: border-box;
}

.img-drag h4 {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    font-size: 14px;
    color: #333;
    line-height: 26px;
}

.img-drag img.upload-img {
    width: auto;
    height: auto;
    max-width: 100%;
    max-height: 100%;
    /*position: absolute;*/
    left: 50%;
    right: 50%;
    top: 0;
    /*display: block;*/
}

.img-drag .video-icon {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    display: block;
}

.img-drag p {
    position: absolute;
    left: 50%;
    top: 52%;
    transform: translateX(-50%);
}

.img-drag .upload-icon {
    width: 230px;
    border: 2px dotted #999;
    position: absolute;
    left: 50%;
    top: 38%;
    transform: translate(-50%, -50%);
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
}

.img-drag .upload-icon span {
    font-size: 18px;
    color: #666;
    line-height: 58px;
}

.img-drag .upload-icon i {
    font-size: 40px;
    color: #666;
    position: relative;
    top: 7px;
}

.layui-tab-item .bdc-upload-dragdiv {
    width: 90%;
    height: 90%;
    padding: 25px;
}

.layui-tab-item .img-drag {
    min-height: calc(100vh - 300px);
    max-height: 100%;
    position: relative;
}

.layui-tab-item .img-drag img.upload-img {
    position: absolute;
    left: 0;
    right: 0;
    margin: auto;
}
