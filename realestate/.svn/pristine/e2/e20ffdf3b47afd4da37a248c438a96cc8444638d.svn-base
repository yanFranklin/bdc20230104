/**
* author: 前端组
* date: 2018-12-14
* version 3.0.0
* describe: 通用less，主要定义了主题色，一级次级按钮颜色及类名
*/
body,
html {
  font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif !important;
  font-size: 14px;
  background: #eaedf1;
}
.clear:after {
  content: '';
  display: block;
  clear: both;
}
.bdc-hide {
  display: none;
}
.bdc-major-btn {
  background-color: #1d87d1;
}
.bdc-major-btn:hover {
  background-color: #1675b8;
}
.bdc-secondary-btn {
  background-color: #f3f4f6;
  color: #666;
  border: 1px solid #d0d5da;
}
.bdc-secondary-btn:hover {
  color: #666;
}
.bdc-delete-btn {
  background-color: #f54743;
}
.bdc-table-second-btn {
  background-color: #fff;
  border: 1px solid #d0d5da;
  color: #333;
}
.bdc-table-second-btn:hover {
  color: #333;
}
.bdc-prohibit-btn {
  background-color: #fff;
  color: #999;
  border: 1px solid #d0d5da;
}
.bdc-prohibit-btn:hover {
  cursor: not-allowed;
  opacity: 1;
  color: #999;
}
body {
  background-color: #eaedf1;
}
html,
body {
  width: 100%;
  height: 100%;
}
.content-div {
  width: 100%;
  height: 100%;
  padding: 79px 10px 10px 10px;
  box-sizing: border-box;
}
.content-div .bdc-content-box {
  width: 100%;
  height: 100%;
  overflow-x: auto;
  background-color: #fff;
}
.content-div form {
  background-color: #fff;
  width: 1200px;
  padding: 0 10px;
  margin: 0 auto;
  box-sizing: border-box;
}
.content-title {
  padding: 10px 0;
  border-bottom: 1px solid #d0d5da;
  background-color: #fff;
  height: 38px;
  clear: both;
  top: 10px;
  left: 10px;
  z-index: 9;
}
.content-title p {
  font-size: 16px;
  color: #333;
  float: left;
  margin-left: 10px;
  line-height: 38px;
}
.content-title .title-btn-area {
  float: right;
  margin-right: 10px;
}
.content-main {
  width: 100%;
}
.table-name {
  width: 100%;
  height: 22px;
  margin: 0 auto;
  padding: 15px 0;
  text-align: center;
  font-size: 16px;
  color: #333;
  background-color: #fff;
}
.layui-table td {
  overflow: hidden;
}
table {
  position: relative !important;
}
.content-main table input[type='text'] {
  display: block;
  border: none;
  outline: none;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.layui-input,
.layui-textarea {
  padding-left: 5px;
}
.content-main .layui-form-danger + .layui-form-select .layui-input,
.content-main .layui-form-danger:focus {
  border: 1px solid #f54743 !important;
}
.bdc-table-box {
  width: 100%;
}
.layui-table {
  width: 100%;
  margin: 0 auto;
  margin-bottom: 20px;
}
.content-main .layui-table tbody tr:hover,
.content-main .layui-table thead tr,
.content-main .layui-table-click,
.content-main .layui-table-header,
.content-main .layui-table-hover,
.content-main .layui-table-mend,
.content-main .layui-table-patch,
.content-main .layui-table-tool,
.content-main .layui-table[lay-even] tr:nth-child(even) {
  background-color: transparent;
}
table.layui-table .quarantine {
  border-left-color: transparent !important;
  border-right-color: transparent !important;
}
table {
  border: 0;
}
tr,
td {
  color: #333;
}
tr textarea,
td textarea {
  color: #333;
}
.layui-table td,
.layui-table th,
.layui-table-col-set,
.layui-table-fixed-r,
.layui-table-grid-down,
.layui-table-header,
.layui-table-page,
.layui-table-tips-main,
.layui-table-tool,
.layui-table-total,
.layui-table-view,
.layui-table[lay-skin=line],
.layui-table[lay-skin=row] {
  border-color: #d0d5da;
}
.layui-table td.set-back-color {
  background-color: #f3f4f6;
  padding: 0 6px;
}
.layui-table td,
.layui-table th {
  padding: 0;
  height: 39px;
  overflow: visible;
  position: static;
}
.layui-table-edit {
  box-shadow: none;
  position: relative;
  color: #333;
  padding: 0 5px;
}
.required-span {
  color: #f54743;
  margin-right: 6px;
}
td {
  text-align: right;
}
td textarea {
  display: block;
  /*position: absolute;
        left: 0;
        top: 0;*/
  width: 100%;
  height: 100%;
  border: none;
  outline: none;
  resize: none;
  padding-left: 5px;
  box-sizing: border-box;
}
td p {
  text-align: left;
}
.set-center {
  text-align: center;
}
.set-tr-height {
  height: 60px;
}
.set-tr-height158 {
  height: 158px;
}
.statement {
  font-size: 14px;
  color: #333;
  line-height: 23px;
  text-indent: 2em;
  margin: 20px 10px;
  text-align: left;
}
.content-main table .gnature {
  width: 800px;
  text-align: left;
}
.content-main table .gnature input[type='text'] {
  display: block;
  width: 182px;
  padding-left: 10px;
  height: 38px;
  line-height: 38px;
  background-color: #fff;
  border-radius: 2px;
  border: none;
}
.content-main table .setTimes .setTimes-float {
  float: left;
  margin-left: 90px;
}
.content-main table .setTimes .setTimes-float label {
  width: 18px !important;
  padding: 9px 0;
  margin: 0;
  text-align: left;
}
.content-main table .setTimes .setTimes-float input,
.content-main table .setTimes .setTimes-float label {
  float: left;
}
.content-main table .setTimes input[type='text'] {
  max-width: 38px;
  border: none;
  text-align: center;
}
.change-label-width {
  width: 138px !important;
  padding: 9px 8px;
  font-size: 14px;
}
input::-webkit-input-placeholder {
  color: #999;
}
.layui-form-select dl dd.layui-this {
  background-color: #1d87d1;
}
.layui-select-title {
  height: 38px;
}
.layui-form-select {
  text-align: left;
}
.layui-form-select .layui-input {
  color: #333;
}
.bdc-set-width {
  width: 80px;
  box-sizing: border-box;
}
.layui-input:hover,
.layui-textarea:hover {
  border-color: #D2D2D2!important;
}
input:disabled {
  background-color: #fff;
}
.bdc-remark {
  text-indent: 2em;
}
.bdc-td-box {
  position: relative;
}
td .fa-ban {
  position: absolute;
  top: 50%;
  right: 10px;
  transform: translateY(-50%);
  color: #f54743;
  font-size: 18px;
}
.layui-disabled,
.layui-disabled:hover {
  color: #333!important;
  cursor: text!important;
}
