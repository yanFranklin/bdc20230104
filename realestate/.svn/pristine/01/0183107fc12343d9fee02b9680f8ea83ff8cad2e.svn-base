* {
  margin: 0;
  padding: 0;
}
body,
html {
  font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif !important;
  width: 100%;
  height: 100%;
}
.clear:after {
  content: '';
  display: block;
  clear: both;
}
.bdc-hide {
  display: none;
}
html {
  font-size: 60px;
}
@media screen and (min-width: 1200px) {
  html {
    font-size: 20px;
  }
}
@media screen and (min-width: 1300px) {
  html {
    font-size: 21px;
  }
}
@media screen and (min-width: 1600px) {
  html {
    font-size: 26px;
  }
}
@media screen and (min-width: 1900px) {
  html {
    font-size: 30px;
  }
}
@media screen and (min-width: 3800px) {
  html {
    font-size: 60px;
  }
}
/*头部*/
.bdc-header {
  width: 100%;
  height: 3.83333333rem;
  background: #0f3ba0 url("../images/bg.png") no-repeat fixed;
  background-size: contain;
  position: relative;
}
.bdc-header h1 {
  font-size: 1.45rem;
  color: #fff;
  height: 3.83333333rem;
  line-height: 3.83333333rem;
  position: absolute;
  top: 0;
  left: 0.6rem;
}
.bdc-header h1 > img {
  width: 1.73333333rem;
  margin-right: 0.33333333rem;
}
.bdc-time {
  width: 22.16666667rem;
  height: 3rem;
  border: 2px solid #6083d3;
  border-radius: 0.33333333rem;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0.53333333rem;
  padding: 0.5rem;
  box-sizing: border-box;
}
.bdc-time div {
  float: left;
  height: 100%;
  line-height: 1.93333333rem;
  font-size: 0.93333333rem;
  color: #fff;
}
.bdc-time .bdc-time-word {
  width: 8.33333333rem;
  border-right: 2px solid #6083d3;
  text-align: center;
}
.bdc-time .bdc-time-details {
  padding-left: 1rem;
}
.bdc-time .bdc-time-details > .bdc-time-hour {
  padding: 0 0.33333333rem;
}
.bdc-container {
  width: 100%;
  height: 32.16666667rem;
  padding: 0.66666667rem;
  box-sizing: border-box;
  background-color: #0c2766;
}
.bdc-container {
  padding-top: 3rem;
  position: relative;
}
.bdc-table-header-box {
  width: 100%;
  height: 2.33333333rem;
  padding: 0 0.66666667rem;
  box-sizing: border-box;
  position: absolute;
  top: 0.66666667rem;
  left: 0;
}
.bdc-table-header {
  width: 100%;
  height: 100%;
}
.layui-carousel {
  background-color: transparent;
}
.layui-carousel > [carousel-item] > * {
  background-color: transparent;
}
.layui-carousel > [carousel-item]:before {
  font-size: 0;
}
.layui-table td,
.layui-table th,
.layui-table-col-set,
.layui-table-fixed-r,
.layui-table-grid-down,
.layui-table-header,
.layui-table-page,
.layui-table-tips-main,
.layui-table-tool,
.layui-table-total,
.layui-table-view,
.layui-table[lay-skin=line],
.layui-table[lay-skin=row] {
  border: 0.06666667rem solid #3f6cd1;
}
.layui-table tbody tr:hover,
.layui-table thead tr,
.layui-table-click,
.layui-table-header,
.layui-table-hover,
.layui-table-mend,
.layui-table-patch,
.layui-table-tool,
.layui-table-total,
.layui-table-total tr,
.layui-table[lay-even] tr:nth-child(even) {
  background-color: #2151be;
}
.layui-table {
  margin: 0;
  background-color: #1141ae;
}
.layui-table thead tr {
  background-color: #8badf9;
  color: #000;
}
.layui-table th {
  font-size: 1.16666667rem;
  border-top: none;
}
.layui-table td:first-child {
  border-left: none;
}
.layui-table th:first-child {
  width: 15.16666667rem;
  border-left: none;
}
.layui-table th:nth-child(2) {
  width: 22.16666667rem;
}
.layui-table th:nth-child(3) {
  width: 8rem;
}
.layui-table th:nth-child(4) {
  width: 7.66666667rem;
}
.layui-table th:last-child {
  width: 9.5rem;
  border-right: none;
}
.layui-table td:last-child {
  border-right: none;
}
.layui-table th,
.layui-table td {
  height: 2.33333333rem;
  text-align: center;
  padding: 0;
}
.layui-table td {
  font-size: 1rem;
  color: #fff;
}
.layui-table td.bdc-td-title {
  background-color: #1141ae;
}
.layui-table tbody tr:last-child td {
  border-bottom: none;
}
.layui-table .bdc-last-title {
  border-bottom: none;
}
.layui-carousel .layui-table {
  position: relative;
  top: -2.33333333rem;
}
.layui-carousel thead {
  visibility: hidden;
}
