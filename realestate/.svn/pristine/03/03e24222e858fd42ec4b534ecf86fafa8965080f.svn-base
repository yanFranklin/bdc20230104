body{
    padding: 10px;
}
.bdc-container{
    width: 100%;
    padding: 10px;
    box-sizing: border-box;
    background-color: #fff;
}
.bdc-table-tips{
    text-align: right;
    font-size: 12px;
    color: #666;
    padding: 0 15px;
}
.layui-table .bdc-table-title{
    height: 38px;
    line-height: 38px;
    font-size: 16px;
    color: #333;
    /*position: relative;*/
    /*height: 28px;*/
    /*line-height: 28px;*/
    /*font-size: 18px;*/
}
.layui-table tbody tr:hover,
.layui-table thead tr,
.layui-table-click,
.layui-table-header,
.layui-table-hover,
.layui-table-mend,
.layui-table-patch,
.layui-table-tool,
.layui-table-total,
.layui-table-total tr,
.layui-table[lay-even] tr:nth-child(even){
    background-color: #fff;
}

/*静态表格样式*/
.layui-table td, .layui-table th{
    text-align: center;
    height: 20px;
    color: #333;
}