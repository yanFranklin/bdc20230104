body{
    background-color: #fff;
}

.bdc-container-box{
    padding: 10px;
}

.bdc-menu-aside{
    /*width: 48%;*/
    width: 520px;
    position: relative;
    display: inline-table;
    margin-right: 0;
}

.bdc-menu-aside .ztree{
    width: 500px;
}

.bdc-menu-aside:first-child{
    margin-right: 20px;
}

.bdc-menu-aside .aside{
    padding-top: 0;
    height: inherit;
}
#asideLeft,
#asideRight{
    height: 90%;
    box-sizing: border-box;
    border: 1px solid #d0d5da;
    margin-bottom: 10px;
    overflow: auto;
}

#asideRight #treeRight{
    min-height: 300px;
}

.bdc-form-title{
    height: 50px;
    background: #f3f4f6;
    border: 1px solid #d0d5da;
    border-bottom: none;
    text-align: left;
    line-height: 48px;
    padding: 0 10px;
    box-sizing: border-box;
    position: relative;
}

.bdc-form-title .bdc-btn-box{
    position: absolute;
    top: 0;
    right: 15px;
}

.bdc-form-title span{
    font-size: 16px;
}

/*树组件样式调整*/
.ztree *{
    font-size: 14px;
}

.ztree li span.switch{
    margin-top: 8px;
}

.ztree li a,
.ztree li a.curSelectedNode,
.ztree li a.tmpTargetNode_inner{
    height: 32px;
    line-height: 32px;
}

.ztree li a.tmpTargetNode_inner{
    background-color: #f3f4f6;
    color: #1d87d1;
}

.ztree li span.button.ico_open,
.ztree li span.button.ico_docu,
.ztree li span.button.ico_close{
    margin: 9px 5px;
}

.ztree li span[title='remove']{
    margin: 9px 5px;
}

.ztree li a.curSelectedNode,
.ztree li a:hover{
    background-color: #f3f4f6;
    border: 0;
}

div.rightMenu {
    position:absolute;
    visibility:hidden;
    top:0;
    background-color: #9c9c9c;
    text-align: left;
    border:1px solid #9c9c9c;
}
div.rightMenu ul{
    padding:4px;
    margin:0px;
    background-color:#fff;
    border:none;
}
div.rightMenu ul li{
    cursor: pointer;
    list-style: none outside none;
    padding:4px;
    font-size: 14px;
}


