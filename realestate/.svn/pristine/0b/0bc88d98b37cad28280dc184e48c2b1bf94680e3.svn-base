table#dkxxTable{
    border: 0;
}

table#dkxxTable tr th:nth-last-child(2),
table#dkxxTable tr td:nth-last-child(2){
    border-right: 0;
}

table#dkxxTable tr th:last-child,
table#dkxxTable tr td:last-child {
    position: absolute;
