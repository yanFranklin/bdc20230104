    background-color: #f3f4f6;
    height: 41px;
    line-height: 41px;
    border-bottom: 0;
}

table#dkxxTable tr td:last-child {
    width: 80px;
    height: 94px;
    line-height: 94px;
    background-color: #fff;
    z-index:990;
}

table#dkxxTable dl.layui-anim {
    position : fixed;
    max-height: 210px;
    z-index: 999;
}
