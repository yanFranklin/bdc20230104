body,
html {
    font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif !important;
    font-size: 14px;
    width: 100%;
    height: 100%;
    background-color: #eaedf1;
}
.clear:after {
    content: '';
    display: block;
    clear: both;
}
.bdc-hide {
    display: none;
}
.bdc-major-btn {
    background-color: #1d87d1;
}
.bdc-major-btn:hover {
    background-color: #1675b8;
}
.bdc-secondary-btn {
    background-color: #f3f4f6;
    color: #666;
    border: 1px solid #d0d5da;
}
.bdc-secondary-btn:hover {
    color: #666;
}

/*内容区*/
.bdc-container-box{
    width: 100%;
    min-width: 960px;
    height: 100%;
    background-color: #eaedf1;
    padding: 10px;
    box-sizing: border-box;
}
.bdc-container{
    width: 100%;
    min-height: 100%;
    background-color: #fff;
    position: relative;
    padding-bottom: 64px;
    box-sizing: border-box;
    margin-bottom: 10px;
}
.bdc-header{
    width: 100%;
    height: 36px;
    line-height: 36px;
    background-color: #d0d5da;
}
.bdc-header>p{
    width: 33.33%;
    float: left;
    color: #333;
    text-align: center;
    font-size: 16px;
    position: relative;
}
.bdc-header>p.bdc-header-success,
.bdc-header>p.bdc-header-prev-success {
    background-color: #1675b8;
    color: #fff;
}
.bdc-header>p.bdc-header-this{
    background-color: #1d87d1;
    color: #fff;
}
.bdc-header>p.nth:nth-child(2){
    border-radius: 50% 50%;
}
.bdc-header>p>img{
    position: absolute;
    top: 0;
    right: 0;
}

/*内容存放区*/
.bdc-title{
    width: 100%;
    height: 42px;
    line-height: 42px;
    border-bottom: 1px dashed #d0d5da;
    color: #1d87d1;
    padding: 0 10px;
    box-sizing: border-box;
}
.bdc-btn-box{
    width: 100%;
    position: absolute;
    bottom: 20px;
    left: 0;
    text-align: center;
}
.layui-btn{
    height: 34px;
    line-height: 34px;
}

/*已填写结束步骤下三角形*/
.bdc-header-success .bottom-sj{
    width: 0;
    height: 0;
    border-style: solid;
    position: absolute;
    right: 0;
}
.bdc-header-success .bottom-sj-1{
    top: 0;
    border-width: 9px 9px;
    border-color: #1675b8 #1675b8 transparent transparent;
}
.bdc-header-success .bottom-sj-2{
    bottom: 0;
    border-width: 9px 9px;
    border-color: transparent #1675b8 #1675b8 transparent;
}

/*当前前一步已结束步骤下三角形*/
.bdc-header-prev-success .bottom-sj{
    width: 0;
    height: 0;
    border-style: solid;
    position: absolute;
    right: 0;
}
.bdc-header-prev-success .bottom-sj-1{
    top: 0;
    border-width: 9px 9px;
    border-color: #1d87d1 #1d87d1 transparent transparent;
}
.bdc-header-prev-success .bottom-sj-2{
    bottom: 0;
    border-width: 9px 9px;
    border-color: transparent #1d87d1 #1d87d1 transparent;
}

/*当前填写步骤下三角形*/
.bdc-header-this .bottom-sj{
    width: 0;
    height: 0;
    border-style: solid;
    position: absolute;
    right: 0;
}
.bdc-header-this .bottom-sj-1{
    top: 0;
    border-width: 9px 9px;
    border-color: #d0d5da #d0d5da transparent transparent;
}
.bdc-header-this .bottom-sj-2{
    bottom: 0;
    border-width: 9px 9px;
    border-color: transparent #d0d5da #d0d5da transparent;
}

.bdc-inner-content iframe{
    width: 100%;
    height: auto;
}