iframe {
    width: 100%;
    height: 100%;
    border: none;
}

.layui-tab {
    /*height: 100%;*/
    min-height: 100%;
    position: relative;
    padding: 47px 0 0 0;
    box-sizing: border-box;
}

.layui-tab-title {
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.layui-tab-content {
    padding: 0;
    width: 100%;
    min-height: 100%;
    height:100%;
}

.layui-tab-item {
    width: 100%;
    height: 100%;
    padding: 15px;
    box-sizing: border-box;
    background-color: #fff;
}

.bdc-basic {
    padding: 0;
}

.basic-info {
    padding: 0;
}

