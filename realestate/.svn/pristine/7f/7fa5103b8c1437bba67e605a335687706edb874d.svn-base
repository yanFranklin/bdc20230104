@import "./common.less";
.bdc-table-box{
    //width: 100%;
    //height: 100%;
    padding: @paddingNum;
    box-sizing: border-box;
    background-color: #fff;
}
.layui-table, .layui-table-view{
    margin: 0;
}
.layui-laypage .layui-laypage-curr .layui-laypage-em{
    background-color: @themeColor;
}
.layui-table td, .layui-table th{
    text-align: center;
 }
.layui-form-checked[lay-skin=primary] i{
    border-color: @themeColor;
    background-color: @themeColor;
}
.layui-form-checkbox[lay-skin=primary]:hover i{
    border-color: @themeColor;
}
//工具栏
.bdc-export-tools{
    position: absolute;
    top: 12px;
    right: 17px;
}
.bdc-export-tools span{
    display: inline-block;
    width: 26px;
    height: 26px;
    padding: 5px;
    line-height: 16px;
    margin-left: 10px;
    text-align: center;
    color: #333;
    border: 1px solid #d0d5da;
    cursor: pointer;
}
.bdc-export-tools span:hover{
    border-color: #999;
}
.layui-btn-xs.bdc-secondary-btn{
  line-height: 20px;
}

/*新增 更多操作*/
.bdc-more-btn{
  position: relative;
  padding-right: 20px;
}
.bdc-more-btn .layui-icon{
  display: inline-block;
  position: absolute;
  top: 56%;
  right: 2px;
  transform: translateY(-50%);
}
.bdc-table-btn-more{
  position: fixed;
  //top: 30px;
  //right: 18px;
  min-width: 80px;
  border: 1px solid #d0d5da;
  background-color: #fff;
  text-align: left;
  z-index: 9999999999999;
  display: none;
}
.bdc-table-btn-more a{
  display: block;
  height: 30px;
  line-height: 30px;
  padding: 0 8px;
  font-size: 12px;
  color: #666;
}
.bdc-table-btn-more a:hover{
  background-color: #eaedf1;
  color: #666;
}
.layui-table td.layui-table-col-special{
  overflow: visible;
}
.layui-table td.layui-table-col-special .layui-table-cell{
  overflow: visible;
}
.layui-table tbody tr:hover,
.layui-table thead tr,
.layui-table-click,
.layui-table-header,
.layui-table-hover,
.layui-table-mend,
.layui-table-patch,
.layui-table-tool,
.layui-table-total,
.layui-table-total tr,
.layui-table[lay-even] tr:nth-child(even){
    background-color: @subColor;
}
.layui-table-page{
    background-color: #fff;
    border-bottom: 1px solid #eaedf1;
}
.layui-table-tool .layui-inline[lay-event]{
    border-color: #d0d5da;
}

.layui-layer.layui-layer-prompt .layui-layer-content{
    padding: @paddingNum;
}
.layui-layer .layui-layer-btn{
    text-align: center;
}
.layui-layer .layui-layer-btn .layui-layer-btn0{
    border-color: #1d87d1;
    background-color: #1d87d1;
    color: #fff;
}
.layui-layer .layui-layer-btn a{
    background-color: #f3f4f6;
    color: #666;
    border: 1px solid #d0d5da;
}