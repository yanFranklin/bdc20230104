body,html{
    font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif !important;
    font-size: 14px;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}
.clear:after {
    content: '';
    display: block;
    clear: both;
}
.bdc-list{
    width: 33.33%;
    float: left;
    height: 34px;
    line-height: 34px;
}
.bdc-list>p{
    display: inline-block;
    width: 72px;
    height: 100%;
    float: left;
    text-align: justify;
}
.bdc-list>p i{
    display:inline-block;
    width:100%;
}
.bdc-list>span{
    display: inline-block;
    height: 100%;
}
.layui-table{
    table-layout:fixed;
}
.layui-table td, .layui-table th {
    padding : 5px 0px;
    font-size: 10px;
}
.bdc-container {
    width: 960px;
}