body,
html {
    font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif !important;
    font-size: 14px;
}
.bdc-hide{
    display: none;
}
#waitModalLayer{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1002;
    background: rgba(0,0,0,.2);
}
#waitModalLayer .bdc-wait-content{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #666;
    background-color: #fff;
    width: 150px;
    height: 75px;
    line-height: 75px;
    font-size: 14px
}
#waitModalLayer .bdc-wait-content>i{
    width: 32px;
    height: 32px;
    line-height: 32px;
    font-size:32px;
    position: absolute;
    top: 22px;
    left: 32px;
}
#waitModalLayer .bdc-wait-content>span{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 75px;
}

/*按钮*/
.bdc-zz-test-btn{
    background-color: #1d87d1;
    margin-bottom: 10px;
}
.layui-layer.layui-layer-page{
    box-shadow: 1px 1px 26px rgba(0,0,0,.3);
}

/*确认提示*/
.layui-layer.bdc-small-tips .layui-layer-btn{
    padding: 0 15px 15px;
}
/*.layui-layer.layui-layer-dialog .layui-layer-content{*/
    /*text-align: center;*/
    /*height: 24px !important;*/
    /*!*line-height: 72px;*!*/
    /*padding: 20px 15px 12px 15px;*/
    /*!*font-size: 18px;*!*/
/*}*/
.bdc-small-tips .layui-layer-btn a{
    border: 1px solid #d0d5da;
    background-color: #f3f4f6;
    color: #666;
    margin-top: 0;
}
.bdc-small-tips .layui-layer-btn .layui-layer-btn0{
    border-color: #1d87d1;
    background-color: #1d87d1;
    color: #fff;
}
.bdc-small-tips .layui-layer-btn .layui-layer-btn0:hover{
    border-color: #1675b8;
    background-color: #1675b8;
    opacity: 1;
}

.bdc-small-tips .layui-layer-content{
    /*margin: 23px 0 8px 0;*/
    padding: 0 32px;
    text-align: center;
    color: #333;
}
.bdc-small-tips .layui-layer-title{
    margin-bottom: 23px;
    height: 40px;
    line-height: 40px;
}
.bdc-small-tips .layui-layer-setwin{
    top: 13px;
}

/*提示*/
.bdc-tips-right .bdc-right-tips-box{
    width: 100%;
    height: 100%;
    background-color: #fff;
    padding: 15px;
    box-sizing: border-box;
    overflow-y: auto;
}
.bdc-tips-right .bdc-right-error{
    border-left: 6px solid #f24b43;
}
.bdc-tips-right .bdc-right-tips-box>p img{
    width: 16px;
    position: absolute;
    top: 50%;
    left: 5px;
    transform: translateY(-50%);
}
.bdc-tips-right h3{
    width: 100%;
    font-size: 16px;
    line-height: 36px;
    padding: 15px;
    box-sizing: border-box;
    position: absolute;
    top: 0;
    left: 0;
}
.bdc-tips-right h3>i{
    font-size: 20px;
    position: absolute;
    top: 15px;
    right: 15px;
    cursor: pointer;
}
.bdc-tips-right .bdc-right-tips-box>p{
    font-size: 14px;
    line-height: 28px;
    padding-left: 26px;
    position: relative;
}
.bdc-tips-right .bdc-right-tips-box>p>a{
    color: #1d87d1;
    padding-left: 5px;
}

/*从左侧滑入*/
@-webkit-keyframes fadeInRight {
    0% {
        -webkit-transform: translateX(390px);
        opacity: 1;
    }
    100% {
        -webkit-transform: translateX(0);
        opacity: 1;
    }
}
.bdc-error-layer{
    opacity: 0;
    animation: fadeInRight .5s;
    -webkit-animation: fadeInRight .5s;
    -moz-animation: fadeInRight .5s;
    -o-animation: fadeInRight .5s;
}

/*小提示*/
.layui-layer-msg.layui-layer-hui{
    background-color: #fff;
    color: #333;
    box-shadow: 0 0 10px #d0d5da;
}
.layui-layer-msg .layui-layer-content img{
    margin-right: 10px;
}
.layui-layer-msg .layui-layer-content a{
    margin-left: 10px;
    color: #406AE3;
}

/*点击转发后 不为空提示信息*/
.bdc-other-tips-box{
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 10px;
    box-sizing: border-box;
    z-index: 999;
}
.bdc-other-tips{
    width: 100%;
    background-color: #eaf4fe;
    padding: 10px;
    box-sizing: border-box;
}
.bdc-other-tips p{
    line-height: 24px;
    color: #333;
}
.bdc-other-tips>p>span{
    color: #2d5de1;
    float: right;
    cursor: pointer;
}

.bdc-tips-right .layui-layer-content{
    max-height: 560px;
}
.layui-layer.bdc-tips-right .layui-layer-content{
    overflow: inherit;
}
.bdc-tips-right .bdc-ignore-btn{
    position: absolute;
    top: -36px;
    right: 37px;
    background-color: #f8f8f8;
    color: #1d87d1;
}
.bdc-tips-right .bdc-ignore-btn:hover{
    color: #1d87d1;
}

.bdc-zf-tips-p{
    text-align: left;
    line-height: 26px;
}
.bdc-zf-tips-p>img{
    position: relative;
    top: -1px;
}

.bdc-tips-right .bdc-right-tips-box .tsxx-title {
    display: inline-block;
    padding: 5px 10px 5px 6px;
    border-left: 3px solid #1d87d1;
    background-color: #f3f4f6;
    margin: 0 7px 3px 0;
    color: #1d87d1;
    font-size: 16px;
}

.bdc-tips-right .bdc-right-tips-box .title-area span {
    font-size: 16px;
}

.bdc-tips-right .bdc-right-tips-box p {
    font-size: 14px;
    line-height: 28px;
    padding-left: 26px;
    position: relative;
}

.bdc-tips-right .bdc-right-tips-box p>a {
    color: #1d87d1;
    padding-left: 5px;
}

.bdc-tips-right .bdc-right-tips-box p img {
    width: 16px;
    position: absolute;
    top: 50%;
    left: 5px;
    transform: translateY(-50%);
}

/*强提示*/
.bdc-strong-tips .bdc-zf-tips-p{
    padding: 0 10px;
    box-sizing: border-box;
    margin-bottom: 5px;
}
.bdc-strong-tips .bdc-zf-tips-p img{
    margin-right: 10px;
}
.bdc-strong-tips .layui-layer-btn .layui-layer-btn0{
    background-color: #1d87d1;
    border-color: #1d87d1;
}

/*分类右侧提示*/
.bdc-tips-right .bdc-right-tips-box .bdc-fl-box{
    border-bottom: 1px solid #d0d5da;
    padding-bottom: 10px;
}
.bdc-tips-right .bdc-right-tips-box .bdc-fl-box:first-child h2{
    line-height: 16px;
    margin-bottom: 8px;
}
.bdc-tips-right .bdc-right-tips-box .bdc-fl-box:last-child{
    border-bottom: none;
    padding-bottom: 0;
}
.bdc-tips-right .bdc-right-tips-box h2{
    font-size: 14px;
    font-weight: 700;
    line-height: 36px;
}
.bdc-tips-right .bdc-right-tips-box .bdc-sure-tip{
    background-color: #d9ebf7;
    border: 1px solid #cbe3f4;
    line-height: 30px;
    padding: 0 8px;
    box-sizing: border-box;
    margin-bottom: 3px;
}
.bdc-warn-title-num{
    color: #1d87d1;
}