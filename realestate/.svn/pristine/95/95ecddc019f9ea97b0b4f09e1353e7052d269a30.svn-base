.bdc-hide{
    display: none;
}
.layui-table td.bdc-add-td-content{
    word-wrap:break-word;
    text-align: left;
}
.layui-table td.bdc-add-td-content>span{
    font-weight: 700;
}
.bdc-blue{
    color: #1d87d1;
}
.bdc-red{
    color: #f54743;
}
.bdc-orange{
    color: #f49c67;
}
.bdc-green{
    color: #10a54a;
}
.bdc-gray{
    color: #999;
}

#bdcJjfaLayer{
    width: 100%;
    height: 100%;
}
.bdc-gz-sql:hover{
    color: #1675b8;
}
.bdc-gz-code-layer .layui-layer-content{
    padding: 10px;
}

/*新增配置*/
.bdc-xzpz-layer .layui-layer-btn{
    background-color: #eee;
}
.bdc-xzpz-layer .bdc-pz-btns {
    width: 100%;
    height: 38px;
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 10px 0;
    background-color: #eee;
    text-align: center;
}
.bdc-xzpz-layer .bdc-left-btn {
    position: absolute;
    top: 10px;
    left: 10px;
    line-height: 38px;
}
.bdc-xzpz-layer .bdc-left-btn a {
    margin: 0 5px;
    color: #2d5de1;
}