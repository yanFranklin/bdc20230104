/*自定义批量修改页面样式*/
.bdc-checkbox-item {
    padding-left: 85px;
}

.layui-form-item .layui-form-checkbox[lay-skin=primary]:nth-of-type(1) {
    position: absolute;
    top: 0;
    left: -66px;
}

/*用于调整下拉列表高度*/
.select-height .layui-form-select dl {
    max-height: 210px;
}

/*下拉框删除图标样式*/
.layui-form-item .xzq-sele .layui-input-inline .layui-icon-close {
    right: 23px;
}
.qlxx{
    width: calc(100% - 9px);
}
.bdcdyxx{
    width: calc(100% - 9px);
}

.layui-form-checkbox[lay-skin=primary] i {
    position: relative;
    display: inline-block;
}
.layui-form-checkbox[lay-skin=primary] i:hover{
     cursor: pointer;
 }
.layui-form-checkbox[lay-skin=primary] i:hover:before{
     content: '勾选置空';
     background: #9ea0a1;
     color: #131313;
     line-height: 1em;
     padding:.8em .8em;
     position: absolute;
     left: -160%;
     top: -200%;
     margin-left: 14px;
     white-space:pre;
     width: 44px;
     height: 8px;
 }
.layui-form-checkbox[lay-skin=primary] i:hover:after{
     position: absolute;
     content: "";
     left: 20%;
     top: -70%;
     height: 0;
     border-top:10px solid  #9ea0a1;
     border-right:8px solid transparent;
     border-left:8px solid transparent;
     border-bottom:8px solid transparent;
}

