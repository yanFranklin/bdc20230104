.bdc-bool-radio{
    height: 38px;
}
#bdc-popup-small, #bdc-popup-textarea, .bdc-layer-textarea{
    width: 100%;
}
#bdc-popup-radio .bdc-tips-words,
.bdc-layer-textarea .bdc-tips-words{
    padding: 0 10px 10px;
    box-sizing: border-box;
    border-bottom: 1px dashed #d0d5da;
    line-height: 24px;
}

.bdc-pzsm{
    border: 1px solid #cbe3f4;
    background-color: #d9ebf7;
    color: #1d87d1;
    padding: 3px;
    margin-right: 5px;
    border-radius: 2px;
    margin-bottom: 12px;
    font-size: 12px;
}
#waitModalLayer{
    z-index: 19891020;
}

.layui-table-body{
    overflow-x: hidden !important;
}

.bdc-line-search-container{
    padding-top: 10px;
}

.bdc-menu-aside {
    width: 220px;
    height: calc(100% + 103px);
    /*background-color: #f3f4f6;*/
    background-color: #fff;
    position: sticky;
    border-right: 1px solid #d0d5da;
    padding-top: 7px;
    padding-left: 11px;
    /*left: 10px;*/
    /*top: 10px;*/
}

.bdc-search-content {
    width: auto;
    left: 0px;
    right: 0px;
}

