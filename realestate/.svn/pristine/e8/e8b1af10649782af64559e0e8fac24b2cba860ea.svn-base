.bdc-percentage-container {
    overflow: hidden;
}

.layui-nav .layui-nav-item a {
    color: #333;
    padding-left: 15px;
}

.layui-nav .layui-nav-item h2 {
    line-height: 36px;
    border-left: 5px solid #009E94;
    margin: 15px 0 5px;
    padding: 0 10px;
    background-color: #f2f2f2;
    color: #000;
}

.layui-nav .layui-nav-item.layui-this a {
    color: #1d87d1;
}

.bdc-percentage-container .bdc-menu-aside .layui-nav-item.layui-this {
    background-color: transparent;
}

.bdc-percentage-container .bdc-menu-aside .layui-nav-item.layui-this a{
    background-color: transparent;
}

.layui-nav-tree .layui-nav-item {
    line-height: 32px;
}

.layui-nav-tree .layui-nav-item a {
    height: 32px;
    line-height: 32px;
}

.layui-nav-tree .layui-nav-item a:hover {
    background-color: transparent;
    color: #1d87d1;
}

.layui-nav .layui-nav-item a:hover {
    color: #1d87d1;
}

.layui-nav-tree .layui-nav-bar {
    background: transparent;
}

.select-area {
    width: 219px;
    /*height: 92px;*/
    /*background-color: #f3f4f6;*/
    background-color: #fff;
    border-right: 1px solid #d0d5da;
    /*border-bottom: 1px dashed #d0d5da;*/
    z-index: 1111;
}

.select-area .layui-form-item .layui-inline {
    width: 100%;
    margin-bottom: 8px;
}

.select-area .layui-form-item .layui-inline label{
    width: 55px;
}

.select-area .layui-form-item {
}

.layui-form-select dl {
    z-index: 1111;
}

.pf-form-item .layui-inline .layui-form-label {
    width: 88px;
}

.layui-inline.bdc-button-box {
    /*width: 50%;*/
}

.layui-form-item .layui-input-inline.select-width {
    width: 100%;
    padding: 0px;
    box-sizing: border-box;
    padding: 0px 11px;
}

.bdc-form-table td input {
    text-align: center;
    border: 0px !important;
    width: 100%;
    height: 36px;
    color: #333;
    outline: none;
}