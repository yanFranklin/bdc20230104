.bdc-container{
    padding-left: 0;
}

.bdc-menu-aside{
    width: 48%;
    position: relative;
    display: inline-block;
    margin-right: 0;
}

.bdc-menu-aside:first-child{
    margin-right: 20px;
}

.bdc-menu-aside .aside{
    padding-top: 0;
}
#asideLeft,
#asideRight{
    height: 90%;
    box-sizing: border-box;
    border: 1px solid #d0d5da;
    margin-bottom: 10px;
    overflow: auto;
}

.bdc-form-title{
    height: 50px;
    background: #f3f4f6;
    border: 1px solid #d0d5da;
    border-bottom: none;
    text-align: left;
    line-height: 48px;
    padding: 0 10px;
    box-sizing: border-box;
    position: relative;
}

.bdc-form-title .bdc-btn-box{
    position: absolute;
    top: 0;
    right: 15px;
}

.bdc-form-title span{
    font-size: 16px;
}

.accordion li .link {
    padding: 5px 10px 5px 50px;
}

.accordion li a:hover {
    background-color: #eaedf1;
}

.submenu .bdc-inner-li {
    padding: 3px 12px 3px 56px;
}

.accordion .bdc-outer-li i {
    top: -2px;
}
.accordion .bdc-outer-li.open>.link>i.fa-caret-right {
    top: -2px;
    left: 4px;
}

.link .docu-icon {
    position: absolute;
    left: 28px;
    top: 7px;
}

#asideRightBox .bdc-hide{
    display: none;
}