body {
    width: 100%;
    height: auto;
    background-color: #fff;
}
.layui-table td {
    font-size: 16px;
    border-style: none;
    padding: 0 0px;

}

.first-table td {
    text-align: left;
}

.first-table .layui-table-edit:nth-child(odd) {
    text-align: center;
    border-bottom: 1px solid grey;
    width: 140px;
    float: right;
}

.second-table .layui-table-edit:nth-child(odd) {
    text-align: left;
    border-bottom: 1px solid grey;
    width: 55%;
}

.first-table {
    margin-top: 5%;
}

.second-table {
    margin-top: 15%;
    margin-bottom: 15%;
    right: 5%;
}

.second-table-right {
    text-align: right;
}

.second-table-left {
    text-align: left;
}

.content-div {
    padding: 15px;
    width: 935px;
    margin: 0 auto;
}

.table-name {
    font-size: 40px;
    font-weight: 700;
    color: #333;
    margin-top: 10%;
    letter-spacing: 20px
}

.layui-table-edit:focus {
    border-color: grey !important;
}

.content-div form {
    padding: 0;
    width: 100%;
}

.layui-table, .table-name {
    width: 85%;
}

.content-div .bdc-content-box {
    width: 100%;
    height: auto;
    background-color: #fff;
    overflow-x: auto;
}