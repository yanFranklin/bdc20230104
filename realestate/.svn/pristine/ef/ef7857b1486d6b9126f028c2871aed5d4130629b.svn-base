* {
    margin: 0;
    padding: 0;
}

html,
body {
    width: 100%;
    height: 100%;
}

body {
    font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif !important;
    font-size: 14px;
    padding: 10px;
    box-sizing: border-box;
    background-color: #eaedf1;
}

.clear:after {
    content: '';
    display: block;
    clear: both;
}

.bdc-hide {
    display: none;
}

.bdc-container {
    width: 100%;
    min-height: 100%;
    background-color: #fff;
    padding: 0 10px 10px 10px;
    box-sizing: border-box;
}


/*标题*/

.bdc-title {
    height: 50px;
    line-height: 50px;
    border-bottom: 1px solid #d0d5da;
    position: relative;
    font-size: 16px;
}

.bdc-title .bdc-btn-box {
    position: absolute;
    top: -2px;
    right: 0;
}

.bdc-major-btn {
    background-color: #1d87d1;
}

.bdc-major-btn:hover {
    background-color: #1675b8;
}


/*颜色选择*/

.bdc-color-module {
    padding: 10px 0;
    border-bottom: 1px dashed #d0d5da;
}

.bdc-config-title {
    line-height: 36px;
}

.bdc-config-color {
    margin: 8px 0 0 0;
}

.bdc-color-list {
    width: 144px;
    float: left;
    margin-bottom: 5px;
}

.bdc-one-color {
    margin-right: 10px;
}

.layui-colorpicker-trigger-i {
    color: transparent;
}

/*表格样例显示*/

.bdc-demo {
    width: 990px;
    padding: 10px;
    /* background-color: #eaedf1; */
    margin-top: 20px;
    margin-bottom: 10px;
    border: 1px solid #d0d5da;
}

.bdc-demo-title {
    line-height: 30px;
}

.bdc-demo td p {
    line-height: 26px;
}

.layui-table td {
    color: #333;
}

.bdc-demo .layui-form-checkbox {
    padding-left: 0;
}