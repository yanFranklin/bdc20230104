.bdc-hide{
    display: none;
}
.bdc-form-div{
    height: 100%;
    padding-top: 68px;
}
.title-sign > a {
    position: absolute;
    top: 0;
    right: 10px;
}
.bdc-jt-table{
    padding: 10px 0;
}
.bdc-th-box{
    position: relative;
}
.bdc-outer {
    position: absolute;
    top: 0;
    left: -18px;
    width: 148px;
    height: 0;
    border-bottom: 1px solid #d0d5da;
    transform: rotate(15deg);
}
@-webkit-keyframes fadeInRight {
    0% {
        -webkit-transform: translateX(900px);
        opacity: 1;
    }
    100% {
        -webkit-transform: translateX(0);
        opacity: 1;
    }
}
.bdc-title-td{
    background-color: #f3f4f6;
}
.bdc-td-box{
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 70px;
}
.bdc-qlr-title-content{
    width: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.bdc-qlr-title-mark{
    position: absolute;
    top: 0;
    left: 0;
}