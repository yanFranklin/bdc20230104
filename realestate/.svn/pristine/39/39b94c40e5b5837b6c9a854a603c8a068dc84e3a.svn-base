html,body{
    width: 100%;
    height: 100%;
}
.bdc-percentage-container{
    width: 100%;
    height: 100%;
    padding: 103px 10px 10px;
    box-sizing: border-box;
    position: relative;
    background-color: #eaedf1;
}
.bdc-line-search-container{
    padding-top: 61px;
}
.bdc-search-content{
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    padding: 10px;
    box-sizing: border-box;
}
.bdc-table-box{
    width: 100%;
    height: 100%;
}

.layui-table-fixed-l{
    box-shadow: 0 0 0 #eaedf1;
}
.bdc-wd-state{
    color: #f54743;
}
.bdc-yd-state{
    color: #1d87d1;
}
.xm-select-parent .xm-form-select dl{
    max-height: 230px;
}
/*消息表格换行显示*/
.layui-table-tips .layui-layer-content{
    white-space: pre-wrap;
}