body,
html {
    height: 100%;
    /*font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif !important;*/
    /*font-size: 14px;*/
    font: 600 16px "SimSun";
}

body {
    background-color: #eaedf1;
}

.clear:after {
    content: '';
    display: block;
    clear: both;
}

.bdc-major-btn {
    background-color: #1d87d1;
}

.bdc-major-btn:hover {
    background-color: #1675b8;
}

.bdc-secondary-btn {
    background-color: #f3f4f6;
    color: #666;
    border: 1px solid #d0d5da;
}

.bdc-secondary-btn:hover {
    color: #666;
}

.content-div {
    width: 100%;
    height: 100%;
    min-height: 100%;
    padding: 84px 15px 15px;
    box-sizing: border-box;
}

/*工具栏*/
.content-title-box {
    width: 100%;
    height: 68px;
    line-height: 68px;
    padding: 0 30px 0 0;
    box-sizing: border-box;
    clear: both;
    top: 15px;
    left: 15px;
    z-index: 9;
    position: fixed;
}

.content-title {
    width: 100%;
    height: 100%;
    background-color: #fff;
    border-bottom: 1px solid #d0d5da;
}

.content-title p {
    font-size: 20px;
    color: #333;
    float: left;
    margin-left: 20px;
    line-height: 68px;
}

.content-title .title-btn-area {
    float: right;
    margin-right: 20px;
}

/*证书详情*/
#details {
    width: 100%;
    min-height: 100%;
    z-index: 999;
    background-color: #fff;
}

/*证书封页*/
#cover {
    width: 100%;
    min-height: 100%;
    z-index: 999;
    /*background-color: #fff;*/
}

/*左侧*/
.bdc-details-left, .bdc-details-right {
    width: 50%;
    height: 100%;
    padding: 9px;
    box-sizing: border-box;
    float: left;
}

.bdc-details-left {
    float: left;
    padding-top: 60px;
}

.bdc-details-right {
    float: left;
}

.bdc-title {
    font-size: 28px;
    text-align: center;
    line-height: 56px;
    color: #666;
}

.bdc-bold {
    color: #000;
}

.bdc-table-tips {
    font-size: 20px;
    /*font-weight: 700;*/
}

.bdc-zs-details-table.layui-table .bdc-title-td {
    /*background-color: #eee;*/
    text-align: right;
    padding-right: 15px;
    color: #333;
    position: static;
    font-weight: 700;
    border: 0;
}

/*右侧*/
.bdc-table-date {
    font-size: 16px;
    text-align: right;
}

.bdc-table-com {
    margin-top: 20px;
    font-size: 14px;
    text-align: center;
    line-height: 32px;
}

.bdc-table-num {
    font-size: 14px;
    text-align: center;
    line-height: 32px;
}

.bdc-notes-title {
    /*margin-top: 20px;*/
    font-size: 16px;
    text-align: center;
    line-height: 38px;
    font-weight: 700;
}

.bdc-notes {
    width: 90%;
    height: 555px;
    margin-top: 80px;
    margin-left: 55px;
    /*border: 1px solid #1d87d1;*/
}

.bdc-notes textarea {
    width: 100%;
    height: 720px;
    border: none;
    color: #333;
    background: 0;
}

.bdc-notes-top {
    text-align: right;
    position: relative;
    height: 88px;
    padding-top: 10px;
    padding-right: 145px;
    box-sizing: border-box;
}

.bdc-notes-top-tips {
    /*float: left;*/
    line-height: 32px;
    position: relative;
    top: -40px;
    font-weight: 700;
    font-size: 16px;
}

.bdc-notes-top-content {
    /*float: left;*/
    display: inline-block;
    width: 190px;
    height: 32px;
    /*border: 1px solid #BBC7C7;*/
    /*text-align: center;*/
    margin-left: 12px;
}

.bdc-notes-top-content span {
    display: inline-block;
    /*width: 100%;*/
    height: 32px;
    line-height: 32px;
}

.bdc-notes-top-content span:first-child {
    box-sizing: border-box;
}

.bdc-notes-top img {
    position: absolute;
    top: 0;
    right: 0;
    width: 88px;
    height: 88px;
}

.bdc-zs-details-table.layui-table .bdc-title-nr, .bdc-zs-details-table.layui-table .zl-textarea {
    padding: 0;
}

.bdc-zs-details-table.layui-table td textarea {
    border: none;
    /*text-indent: 1em;*/
    color: #333;
    background: 0;
    width: 90%;
}

.zl-textarea {
    padding: 0 0;
}

.bdc-zs-details-table.layui-table .bdc-title-td-qt {
    height: 80px;
}

.bdc-zs-details-table.layui-table tr:hover, .bdc-zs-details-table.layui-table tr.hilite {
    background: 0;
}

/**zs-css**/
.bdc-details-left table input[type='text'] {
    display: block;
    border: none;
    outline: none;
    width: 95%;
    height: 100%;
    margin-left: -11px;
    background: 0;
    padding: 0 5px;
}

.bdc-details-right span input[type='text'] {
    display: block;
    border: none;
    outline: none;
    width: 45px;
    height: 100%;
    /*font-weight: 700;*/
    background: 0;
    padding: 0;
}

.bdc-details-left p input[type='text'] {
    display: block;
    border: none;
    outline: none;
    width: 100%;
    height: 100%;
    margin-left: -10px;
    background: 0;
    float: left;
}

/**zmview**/
