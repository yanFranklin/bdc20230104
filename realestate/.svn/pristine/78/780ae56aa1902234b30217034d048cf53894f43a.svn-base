@import "./common.less";
@import "./search.less";
html,body{
    width: 100%;
    height: 100%;
}
body{
  background-color: @systemBg;
}
.bdc-form-box{
    width: 100%;
    height: 100%;
}
/*tab栏*/
.layui-tab{
    background-color: #fff;
    width: 100%;
    min-height: 100%;
    margin: 0;
    padding: 0 15px;
    box-sizing: border-box;
}
.layui-tab-content{
    padding: 5px 0 0 0;
    position: relative;
}
.layui-tab-title{
    height: auto;
    border-bottom-color: #d0d5da;
    color: #666;
    padding-top: 10px;
}
.layui-tab-title li{
    font-size: 16px;
    height: 36px;
    line-height: 16px;
    padding: 10px 15px;
    box-sizing: border-box;
    top: 1px;
}
.layui-tab-title .layui-this{
    color: #1d87d1;
    border-bottom: 2px solid #1d87d1;
}
.layui-tab-title .layui-this:after{
    border: none;
}
//一个输入框占两个位置
.layui-form-item .layui-inline.bdc-two-column{
    width: 64%;
}
.layui-form-item .bdc-two-column .layui-input-inline{
  width: 77%;
}
.bdc-form-div{
    width: 100%;
    height: 100%;
    padding: 84px 15px 15px 15px;
    box-sizing: border-box;
    background-color: @systemBg;
}
.bdc-form-div .layui-form{
    height: 100%;
    box-sizing: border-box;
    background-color: #fff;
}
.basic-info{
    padding: 15px 0;
    border-bottom: 1px dotted #eaedf1;

    &:last-child{
        border-bottom: none;
    }
}
.bdc-content-fix{
    width: 100%;
    height: 69px;
    background-color: #eaedf1;
    padding: 0 15px;
    box-sizing: border-box;
    position: fixed;
    top: 15px;
    left: 0;
    z-index: 999;
}
.content-title{
    width: 100%;
    padding: 15px 0;
    border-bottom:1px solid @systemBg;
    background-color: #fff;
    height: 38px;
    clear: both;

    p{
        font-size: 20px;
        color: #333;
        float: left;
        margin-left: 20px;
        line-height: 38px;
    }
    .title-btn-area{
        float: right;
        margin-right: 20px;
    }
}
.layui-form-item{
    .layui-inline{
        width: 32%;
    }
  .layui-input-inline{
      width: 53%;
  }
}

.form-margin-area{
    background-color: #fff;
}
.change-input-width90{
    width: 25.5% !important;
}

.title-sign{
    width: 100%;
    height: 20px;

    p{
        font-size: 16px;
        color: #333;
        height: 16px;
        border-left: 4px solid #1d87d1;
        margin-left: 30px;
        padding-left: 10px;
        line-height: 16px;
    }
}
.layui-form-item{
    margin-bottom: 0;
}
.change-textarea-margin .layui-input-inline{
    width: 81.5%;
}
.change-textarea-margin{
    margin-top: 15px;
}

.required-span{
   color: @warnColor;
   margin-right: 6px;
}
.layui-form-checked[lay-skin=primary] i {
   border-color: @themeColor;
   background-color: @themeColor;
   color: #fff;
}
.layui-form-checkbox[lay-skin=primary]:hover i {
   border-color: @themeColor;
   color: #fff;
}
.layui-input:focus, .layui-textarea:focus{
   border-color: @themeColor!important;
}
.layui-form-radio>i:hover, .layui-form-radioed>i{
   color: @themeColor;
}
.layui-form-danger+.layui-form-select .layui-input, .layui-form-danger:focus{
    border-color: @warnColor!important;
}
input:disabled {
    //background-color: #f3f4f6;
    //cursor: not-allowed;
    color: @subTextColor;
}
.layui-inline .layui-form-label{
    height: 20px;
}
.layui-form-label{
    width: 90px;
}
.change-label-width {
    //width: 138px !important;
    //padding: 9px 8px;
    font-size: 14px;
}
.basic-info .bdc-label-newline{
    padding: 5px 15px;
    height: 28px;
    line-height: 15px;
}
