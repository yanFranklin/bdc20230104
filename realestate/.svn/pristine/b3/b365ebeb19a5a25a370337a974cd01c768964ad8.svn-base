
.alert {
    font-size: 12px;
    border-radius: 4px;
    padding: 5px;
    margin-bottom: 5px;
}

.alert-success {
    background-color: #dff0d8;
    border-color: #d6e9c6;
    color: #3c763d;
}

.alert-success hr {
    border-top-color: #c9e2b3;
}

.alert-success .alert-link {
    color: #2b542c;
}

.alert-info {
    background-color: #d9edf7;
    border-color: #bce8f1;
    color: #31708f;
}

.alert-info hr {
    border-top-color: #a6e1ec;
}

.alert-info .alert-link {
    color: #245269;
}

.alert-warning {
    background-color: #fcf8e3;
    border-color: #faebcc;
    color: #8a6d3b;
}

.alert-warning hr {
    border-top-color: #f7e1b5;
}

.alert-warning .alert-link {
    color: #66512c;
}

.alert-danger {
    background-color: #f2dede;
    border-color: #ebccd1;
    color: #a94442;
}

.alert-danger hr {
    border-top-color: #e4b9c0;
}

.alert-danger .alert-link {
    color: #843534;
}


/*按钮*/
.bdc-zz-test-btn {
    background-color: #1d87d1;
    margin-bottom: 10px;
}

/*确认提示*/
.layui-layer.bdc-small-tips .layui-layer-btn {
    padding: 0 15px 15px;
}

.bdc-small-tips .layui-layer-btn a {
    border: 1px solid #d0d5da;
    background-color: #f3f4f6;
    color: #666;
    margin-top: 0;
}

.bdc-small-tips .layui-layer-btn .layui-layer-btn0 {
    border-color: #1d87d1;
    background-color: #1d87d1;
    color: #fff;
}

.bdc-small-tips .layui-layer-btn .layui-layer-btn0:hover {
    border-color: #1675b8;
    background-color: #1675b8;
    opacity: 1;
}

.bdc-small-tips .layui-layer-content {
    /*margin: 23px 0 8px 0;*/
    padding: 0 32px;
    text-align: center;
    color: #333;
}

.bdc-small-tips .layui-layer-title {
    margin-bottom: 23px;
    height: 40px;
    line-height: 40px;
}

.bdc-small-tips .layui-layer-setwin {
    top: 13px;
}

/*提示*/
.bdc-tips-right .bdc-right-tips-box {
    background-color: #fff;
    padding: 15px;
    box-sizing: border-box;
}

.bdc-tips-right .bdc-right-error {
    border-left: 6px solid #f24b43;
}

.bdc-tips-right .bdc-right-tips-box .tsxx > p img {
    width: 16px;
    position: absolute;
    top: 50%;
    left: 5px;
    transform: translateY(-50%);
}

.bdc-tips-right .bdc-right-tips-box .tsxx > h3 {
    font-size: 16px;
    line-height: 24px;
    padding-bottom: 12px;
    position: relative;
}

.bdc-tips-right .bdc-right-tips-box > h3 > i {
    font-size: 20px;
    position: absolute;
    top: 0;
    right: 0;
    cursor: pointer;
}

.bdc-tips-right .bdc-right-tips-box .tsxx > p {
    font-size: 14px;
    line-height: 28px;
    padding-left: 26px;
    position: relative;
}

.bdc-tips-right .bdc-right-tips-box .tsxx > p > a {
    color: #1d87d1;
    padding-left: 5px;
}

.layui-table tbody tr:hover, .layui-table-body tr:hover, .layui-table-hover {
    background-color: #eaf4fe;
}