@import "search";
body{
    padding: 15px;
}
//小弹出层
#bdc-popup-small{
    width: 400px;
    background-color: #fff;
}
#bdc-popup-small .layui-form-item .layui-inline{
    width: 100%;
}
.required-span {
    color: @warnColor;
    margin-right: 6px;
}
.bdc-label-newline {
    padding: 5px 15px;
    height: 28px;
    line-height: 12px;
}
.layui-form-item .layui-input-inline .layui-textarea{
    resize: none;
}

//大弹出层
#bdc-popup-large{
    width: 960px;
    background-color: #fff;
    padding: 0 13px 0 2px;
    margin-top: 15px;
    box-sizing: border-box;
}
#bdc-popup-large .layui-form-item .layui-input-inline{
    width: 190px;
    margin-right: 0;
}
#bdc-popup-large .layui-form-item .layui-inline{
    width: 310px;
}
#bdc-popup-large .layui-form-item .layui-inline.bdc-button-box{
    width: 100%;
}
//占一行
#bdc-popup-large .layui-form-item .bdc-complete-line{
    width: 100%;
}
#bdc-popup-large .layui-form-item .bdc-complete-line .layui-input-inline{
    width: 819px;
}


.layui-layer .layui-layer-title{
    font-size: 16px;
}
.layui-layer-iframe .layui-layer-btn, .layui-layer-page .layui-layer-btn{
    text-align: center;
}
.layui-layer .layui-layer-btn a{
    height: 38px;
    line-height: 38px;
    padding: 0 18px;
    box-sizing: border-box;

    background-color: @subColor;
    color: @subTextColor;
    border: 1px solid @borderBg;
}
.layui-layer .layui-layer-btn a:hover{
    color: @subTextColor;
}
.layui-layer .layui-layer-btn .layui-layer-btn0{
    background-color: @themeColor;
    border-color: @themeColor;
    color: #fff;
}
.layui-layer .layui-layer-btn .layui-layer-btn0:hover{
    background-color: @themeHover;
    color: #fff;
}
