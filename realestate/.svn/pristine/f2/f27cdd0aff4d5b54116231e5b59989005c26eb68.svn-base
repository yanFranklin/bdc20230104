html,body{
    width: 100%;
    height: 100%;
}
.clear:after {
    content: '';
    display: block;
    clear: both;
}
.bdc-hide{
    display: none;
}
.bdc-container{
    width: 100%;
    height: 100%;
    padding: 10px;
    box-sizing: border-box;
    background-color: #eaedf1;
}
.bdc-content{
    width: 100%;
    min-height: 100%;
    /*background-color: #fff;*/
}
/*上半部分*/
.bdc-tips-words{
    line-height: 24px;
    padding: 10px;
    background-color: #fff;
    margin-bottom: 10px;
}
.bdc-tips-words>.bdc-pz-title{
    border: 1px solid #cbe3f4;
    background-color: #d9ebf7;
    color: #1d87d1;
    padding: 3px;
    margin-right: 5px;
    border-radius: 2px;
    margin-bottom: 12px;
    font-size: 12px;
    line-height: 24px;
}
.bdc-tips-words .bdc-sm-js{
    padding-left: 5px;
}
.bdc-content-title{
    height: 36px;
    line-height: 36px;
    border-bottom: 1px solid #d0d5da;
    font-size: 16px;
    position: relative;
}
.bdc-operate-btn{
    height: 100%;
    padding: 0 5px;
    position: absolute;
    top: 0;
    right: -5px;
}
.bdc-operate-btn .layui-icon{
    font-size: 26px;
    color: #666;
}
.bdc-top-content{
    width: 100%;
    padding: 10px;
    box-sizing: border-box;
    margin-bottom: 10px;
    background-color: #fff;
}
.bdc-ypz-content{
    width: 100%;
    padding: 5px 10px 0;
    box-sizing: border-box;
    max-height: 65px;
    overflow-y: auto;
}
.bdc-ypz-content>a{
    width: 25%;
    height: 30px;
    line-height: 30px;
    float: left;
    position: relative;
}
.bdc-ypz-content>a>span{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: block;
    padding-left: 18px;
}
.bdc-ypz-content>a>img{
    position: absolute;
    top: 9px;
    left: 0;
}
.bdc-none-pz{
    margin: 10px 0;
    text-align: center;
}
.bdc-none-pz img{
    margin-right: 10px;
}

/*下半部分内容区*/
.bdc-bottom-content{
    width: 100%;
    padding: 10px;
    box-sizing: border-box;
    background-color: #fff;
}
.bdc-search-box {
    position: absolute;
    top: 1px;
    right: 46px;
    width: 240px;
    box-sizing: border-box;
    height: 30px;
}
.bdc-search-box .layui-icon-search {
    position: absolute;
    height: 30px;
    top: -2px;
    left: 14px;
    color: #999;
    border-color: #d0d5da;
}
.bdc-search-box .layui-input {
    width: 100%;
    height: 100%;
    border-radius: 15px;
    padding: 0 38px;
}
.bdc-search-box .layui-icon-close {
    position: absolute;
    top: 50%;
    right: 14px;
    transform: translateY(-50%);
    color: #f54743;
    border-color: #d0d5da;
    cursor: pointer;
    font-weight: 700;
}

.bdc-bottom-content .layui-btn{
    height: 34px;
    line-height: 34px;
}
.bdc-dpz-content{
    width: 100%;
    padding-bottom: 55px;
    border: 1px solid #d0d5da;
    position: relative;
    box-sizing: border-box;
    margin-top: 10px;
}
.bdc-pz-item{
    width: 100%;
    height: 100%;
    padding-top: 8px;
    box-sizing: border-box;
    overflow-y: auto;
}
.bdc-pz-item .layui-input-block{
    width: 16.66%;
    margin-left: 0;
    padding-left: 15px;
    box-sizing: border-box;
    float: left;
}
.layui-form-checked[lay-skin=primary] i{
    border-color: #1d87d1!important;
    background-color: #1d87d1;
}
.layui-form-checkbox[lay-skin=primary]:hover i{
    border-color: #1d87d1;
}
.bdc-pz-item .layui-form-checkbox[lay-skin=primary]{
    width: 100%;
    box-sizing: border-box;
}
.bdc-pz-item .layui-form-checkbox[lay-skin=primary]>span{
    width: 100%;
    padding-right: 0;
}
.bdc-save-btn{
    width: 100%;
    position: absolute;
    bottom: 10px;
    left: 0;
    text-align: center;
}
/*已配置列表弹出层*/
.bdc-error-layer .layui-layer-title{
    background-color: #fff;
    border-bottom: none;
    padding: 0 20px;
}
.bdc-error-layer .layui-layer-title>p{
    width: 100%;
    height: 100%;
    border-bottom: 1px solid #d0d5da;
    box-sizing: border-box;
}
.bdc-error-layer .layui-layer-title>p>span{
    width: 100%;
    height: 16px;
    line-height: 16px;
    border-left: 3px solid #1d87d1;
    padding-left: 10px;
    box-sizing: border-box;
}
.bdc-error-layer .layui-layer-setwin{
    right: 20px;
}
#ypzList{
    width: 100%;
    height: 100%;
    padding: 20px;
    box-sizing: border-box;
}
#ypzList .bdc-table-box{
    width: 100%;
    height: 100%;
    padding: 0;
}
#ypzList .layui-table td:last-child{
    text-align: left;
}
#ypzList .layui-table td:last-child .layui-table-cell{
    padding-left: 15px;
}
.bdc-tips-right .layui-layer-content{
    max-height: 1600px;
}