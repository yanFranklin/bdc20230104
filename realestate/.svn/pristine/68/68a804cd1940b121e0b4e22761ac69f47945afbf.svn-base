@import "./common.less";
//搜索条件
.bdc-search-box {
    background-color: #fff;
    .layui-form {
        width: 100%;
        padding-bottom: 15px;
        border-bottom: 1px dashed @borderBg;
    }
}

.layui-form-item {
    margin-bottom: 0;
}

.layui-form-item .layui-inline {
    width: 33%;
    margin-bottom: 0;
    margin-top: 15px;
    margin-right: 0;
}

.layui-inline .layui-form-label {
    width: 90px;
}

.layui-form-item .layui-input-inline {
    //min-width: 190px;
    width: 60%;
}

.layui-form-select dl dd.layui-this {
    background-color: @themeColor;
}

.layui-laydate .layui-laydate-content .layui-this {
    background-color: @themeColor !important;
}

.layui-form-item .layui-inline.bdc-button-box {
    width: 100%;
    text-align: center;
}

.layui-badge-rim,
.layui-inline .layui-colla-content,
.layui-inline .layui-colla-item,
.layui-inline .layui-collapse,
.layui-inline .layui-elem-field,
.layui-inline .layui-form-pane .layui-form-item[pane],
.layui-inline .layui-form-pane .layui-form-label,
.layui-inline .layui-input,
.layui-inline .layui-layedit,
.layui-inline .layui-layedit-tool,
.layui-inline .layui-quote-nm,
.layui-inline .layui-select,
.layui-inline .layui-tab-bar,
.layui-inline .layui-tab-card,
.layui-inline .layui-tab-title,
.layui-inline .layui-tab-title .layui-this:after,
.layui-inline .layui-textarea,
select {
    border-color: @borderBg;
    color: @mainTextColor;
}

/*placeholder 的字体颜色*/
input::-webkit-input-placeholder {
    color: @placeholderTextColor;
}

.layui-input-inline .layui-select-disabled .layui-disabled {
    border-color: @borderBg !important;
}

//复选框需要
.easyui-combotree {
    display: none !important;
}

.tree-node-selected {
    background: @themeColor;
    color: #fff;
}

.panel-body {
    color: @mainTextColor;
}

.textbox {
    width: 190px;
    height: 38px;
    border-color: @borderBg;
    border-radius: 0;
}

.textbox .textbox-text {
    font-size: 14px;
    outline: none;
    color: @mainTextColor;
}

.combo-arrow {
    background-color: transparent;
}

.tree-node {
    height: 36px;
    position: relative;
    padding-left: 24px;
    box-sizing: border-box;
}

.tree-title {
    height: 36px;
    line-height: 36px;
    font-size: 14px;
}

.tree-collapsed, .tree-checkbox {
    position: absolute;
    top: 50%;
    left: 4px;
    transform: translateY(-50%);
}