/*定位锚点样式*/
.slick>.bdc-default-slick{
    width: 50%;
    float: left;
    text-align: center;
}
.slick-slide{
    text-align: center;
}
.bdc-nav-container .slick a{
    width: 320px;
}

/*页面内一级标题样式*/
.form-margin-area .bdc-first-title{
    height: 52px;
    line-height: 52px;
    font-size: 14px;
    color: #1d87d1;
    /*font-weight: 700;*/
    padding: 0 10px;
    border-bottom: 1px solid #d0d5da;
    box-sizing: border-box;
    position: relative;
}

.bdc-add-sqr-box{
    border-top: 1px dotted #d0d5da;
    margin-top: 10px;
}

.bdc-first-title-btn {
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
}
.bdc-third-btn {
    font-size: 14px;
    color: #2d5de1;
    float: left;
    height: 14px;
    line-height: 14px;
    padding: 0 8px;
    font-weight: 400;
    border-right: 1px solid #d0d5da;
    cursor: pointer;
}
.bdc-third-btn:last-child{
    border-right: none;
}

.layui-form-item .bdc-jt-table .layui-form-checkbox[lay-skin=primary]{
    margin-top: 0;
}