/*南通新建任务二三级*/
.bdc-nt-details-type {
    width: 100%;
    box-sizing: border-box;
}

.bdc-nt-details-content {
    width: 100%;
    box-sizing: border-box;
    padding: 0 10px;
    position: relative;
    line-height: 42px;
    border: 1px solid #d0d5da;
    margin-bottom: 10px;
}

.bdc-nt-details-content:last-child {
    margin-bottom: 0;
}

.bdc-show-third {
    padding: 0 8px;
    position: absolute;
    top: 10px;
    right: 10px;
}

.bdc-third-rw {
    border-top: 1px dashed #d0d5da;
}

.bdc-third-rw li {
    width: 25%;
    float: left;
}

.bdc-nt-details-type .bdc-details-type-content a {
    width: 100%;
    height: 42px;
    padding-left: 15px;
    position: relative;
    box-sizing: border-box;
    line-height: 42px;
}

.bdc-spot {
    font-size: 52px;
    font-style: normal;
    position: absolute;
    top: -2px;
    left: 0;
}


.bdc-search-box .layui-form-item .cxtj-mhlx-css .layui-input {
    padding-left: 75px;
}

.bdc-search-box .layui-form-item .cxtj-mhlx-css .bdc-screen-inline .layui-input {
    padding-left: 6px;
    height: 32px;
    line-height: 32px;
    border: none;
    border-right: 1px solid #d0d5da;
    padding-right: 10px;
}
